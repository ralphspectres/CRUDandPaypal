@model IEnumerable<CrudSample.Models.ClientEmployee>

@{
    ViewBag.Title = "Employee List";
}

<h2>List of Client Employees</h2>

<p>
    <button onclick="location.href='@Url.Action("Create", "Employee")';return false;">Add an Employee</button>
    &nbsp;&nbsp;&nbsp;&nbsp;
    <button onclick="location.href='@Url.Action("Index", "Client")';return false;">View Clients</button>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Client.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Client.Name)
        </td>
        <td>
            <button onclick="location.href='@Url.Action("Edit", "Employee", new { id = item.ClientEmployeeId })';return false;">Edit Details</button>  
            <button onclick="location.href='@Url.Action("Details", "Employee", new { id = item.ClientEmployeeId })';return false;">View Details</button> 
            <button onclick="location.href='@Url.Action("Delete", "Employee", new { id = item.ClientEmployeeId })';return false;">Delete Employee</button>
        </td>
    </tr>
}

</table>
